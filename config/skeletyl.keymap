#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/mouse.h>

#define BASE    0
#define CMAK    1
#define NAV     2
#define MOUSE   3
#define MEDIA   4
#define NUM     5
#define SYM     6
#define FUN     7
#define VANILLA 8
#define ADJUST  9
#define NAV_R   10

&lt {
    quick_tap_ms = <200>;
};

&mmv {
    time-to-max-speed-ms = <50>;
};

&mwh {
    acceleration-exponent=<1>;
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    combos {
        compatible = "zmk,combos";
        combo_numlock {
            timeout-ms = <30>;
            key-positions = <31 32>;
            bindings = <&kp KP_NUM>;
        };
    };

    macros {
        htnl: htnl {
            label = "hold_tap_numlock";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp KP_NUM>
                , <&macro_pause_for_release>
                , <&macro_tap &kp KP_NUM>
                ;
        };
    };

	keymap {
		compatible = "zmk,keymap";

		base {
			bindings = <
&kp Q           &kp W           &kp E           &kp R           &kp T                                   &kp Y           &kp U           &kp I           &kp O           &kp SQT          
&hm LGUI A      &hm LALT S      &hm LCTRL D     &hm LSHFT F     &kp G                                   &kp H           &hm RSHIFT J    &hm LCTRL K     &hm LALT L      &hm LGUI P   
&kp Z           &kp X           &kp C           &kp V           &kp B                                   &kp N           &kp M           &kp COMMA       &kp DOT         &kp FSLH       
                                &lt FUN ESC     &lt NUM SPACE   &lt SYM TAB                             &lt MOUSE RET   &lt NAV BSPC    &lt MEDIA DEL   
			>;
		};

		cmak {
			bindings = <
&kp Q           &kp W           &kp F           &kp P           &kp B                                   &kp J           &kp L           &kp U           &kp Y           &kp SQT          
&hm LGUI A      &hm LALT R      &hm LCTRL S     &hm LSHFT T     &kp G                                   &kp M           &hm RSHIFT N    &hm LCTRL E     &hm LALT I      &hm LGUI O   
&kp Z           &kp X           &kp C           &kp D           &kp V                                   &kp K           &kp H           &kp COMMA       &kp DOT         &kp FSLH       
                                &lt FUN ESC     &lt NUM SPACE   &lt SYM TAB                             &lt MOUSE RET   &lt NAV BSPC    &lt MEDIA DEL   
			>;
		};

		nav {
			bindings = <
&kp PG_UP       &kp HOME        &kp UP          &kp END         &kp INS                                 &none           &none           &none           &none           &none          
&kp PG_DN       &kp LEFT        &kp DOWN        &kp RIGHT       &kp CAPS                                &none           &kp RSHFT       &kp LCTRL       &kp LALT        &kp LGUI       
&kp LC(Z)       &kp LC(X)       &kp LC(C)       &kp LC(V)       &kp LC(Y)                               &none           &none           &none           &none           &none          
                                &trans          &trans          &trans                                  &trans          &trans          &trans          
			>;
		};

		mouse {
			bindings = <
&none           &none           &none           &none           &none                                   &none           &none           &none           &none           &none          
&none           &none           &none           &none           &none                                   &none           &kp RSHFT       &kp LCTRL       &kp LALT        &kp LGUI       
&kp LC(Z)       &kp LC(X)       &kp LC(C)       &kp LC(V)       &kp LC(Y)                               &none           &none           &none           &none           &none          
                                &trans          &trans          &trans                                  &trans          &trans          &trans          
			>;
		};

		media {
			bindings = <
&none           &none           &kp C_VOL_UP    &none           &none                                   &reset          &none           &none           &none           &none          
&none           &kp C_PREV      &kp C_VOL_DN    &kp C_NEXT      &none                                   &bootloader     &kp RSHFT       &kp LCTRL       &kp LALT        &kp LGUI       
&none           &none           &none           &none           &none                                   &none           &none           &none           &none           &none          
                                &kp C_MUTE      &kp C_PP        &kp C_STOP                              &trans          &trans          &trans          
			>;
		};

		num {
			bindings = <
&none           &mkp MCLK       &mkp LCLK       &mkp RCLK       &htnl                                   &kp LBKT        &kp N7          &kp N8          &kp N9          &kp RBKT       
&kp LGUI        &kp LALT        &kp LCTRL       &kp LSHFT       &none                                   &kp EQUAL       &kp N4          &kp N5          &kp N6          &kp SEMI       
&kp LC(Z)       &kp LC(X)       &kp LC(C)       &kp LC(V)       &kp LC(Y)                               &kp BSLH        &kp N1          &kp N2          &kp N3          &kp GRAVE      
                                &trans          &trans          &trans                                  &kp MINUS       &kp N0          &kp DOT         
			>;
		};

		sym {
			bindings = <
&none           &none           &none           &none           &none                                   &kp LBRC        &kp AMPS        &kp ASTRK       &kp LPAR        &kp RBRC       
&kp LGUI        &kp LALT        &kp LCTRL       &kp LSHFT       &none                                   &kp PLUS        &kp DLLR        &kp PRCNT       &kp CARET       &kp COLON      
&none           &none           &none           &none           &none                                   &kp PIPE        &kp EXCL        &kp AT          &kp HASH        &kp TILDE      
                                &trans          &trans          &trans                                  &kp UNDER       &kp LPAR        &kp RPAR        
			>;
		};

		fun {
			bindings = <
&none           &none           &none           &none           &reset                                  &kp PSCRN       &kp F7          &kp F8          &kp F9          &kp F12        
&kp LGUI        &kp LALT        &kp LCTRL       &kp LSHFT       &bootloader                             &kp SLCK        &kp F4          &kp F5          &kp F6          &kp F11        
&none           &none           &none           &none           &none                                   &kp PAUSE_BREAK &kp F1          &kp F2          &kp F3          &kp F10        
                                &trans          &trans          &trans                                  &kp TAB         &kp SPACE       &lt ADJUST K_APP
			>;
		};

		vanilla {
			bindings = <
&kp Q           &kp W           &kp E           &kp R           &kp T                                   &kp Y           &kp U           &kp I           &kp O           &kp P          
&kp A           &kp S           &kp D           &kp F           &kp G                                   &kp H           &kp J           &kp K           &kp L           &kp SEMI       
&kp Z           &kp X           &kp C           &kp V           &kp B                                   &kp N           &kp M           &kp COMMA       &kp DOT         &kp FSLH       
                                &kp LGUI        &kp LALT        &kp SPACE                               &kp RET         &kp BSPC        &kp DEL         
			>;
		};

		adjust {
			bindings = <
&bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4                            &to 0           &to 1           &none           &none           &none          
&none           &none           &none           &none           &none                                   &none           &none           &none           &none           &none          
&bt BT_CLR      &out OUT_BLE    &out OUT_USB    &none           &none                                   &none           &none           &none           &none           &none          
                                &none           &none           &none                                   &none           &none           &none           
			>;
		};

		nav_r {
			bindings = <
&none           &kp W           &none           &none           &none                                   &none           &none           &kp UP          &none           &none          
&kp A           &kp S           &none           &kp F           &none                                   &none           &kp LEFT        &kp DOWN        &kp RIGHT       &none          
&kp Z           &kp X           &kp C           &kp V           &none                                   &none           &none           &none           &none           &none          
                                &kp LGUI        &kp LALT        &kp SPACE                               &kp RET         &kp BSPC        &kp DEL         
			>;
		};
	};
};
